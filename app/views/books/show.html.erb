<body>

<div class="container">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile' %>

		<h2>New book</h2>
		<%= render 'books/newform' %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@userbook.user_id) do %>
						<%= attachment_image_tag(@userbook.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to @userbook.title, @book %></td>
					<td><%= @userbook.body %></td>
					<% if @userbook.favorited_by?(current_user) %>
         <li>
    <%= link_to post_image_favorites_path(@post_image), method: :delete do %>
    <td class="fa fa-heart" aria-hidden="true" style="color: red;"></td>
    <%= @post_image.favorites.count %> いいね
    <% end %>
<% else %>
    <%= link_to post_image_favorites_path(@post_image), method: :post do %>
    <td class="fa fa-heart-o" aria-hidden="true"></td>
    <%= @post_image.favorites.count %> いいね
    <% end %>
<% end %>
					<td class="comment-count">コメント数：：<%= @book.book_comments.count %></td>
					<%if current_user == @user %>
					<td><%= link_to "Edit",edit_book_path(@userbook), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",book_path(@userbook), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>

			 <%= form_for (@book_comment) do |f| %>
      <div class="row">
        <div class="col-sm-12">
            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
        </div>
      </div>
    <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
    <% end %>

	</div>

</div>
</div>

</body>